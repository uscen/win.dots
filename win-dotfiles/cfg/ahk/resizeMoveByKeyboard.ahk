; # =============================================================================== #
; # Movement/resizing increment in pixels:                                          #
; # =============================================================================== #
i := 50

; # =============================================================================== #
; # Move Window:                                                                    #
; # =============================================================================== #
#l:: {
    WinGetPos(&x, &y, , , "A")
    WinMove(x + i, y, , , "A")
}

#h:: {
    WinGetPos(&x, &y, , , "A")
    WinMove(x - i, y, , , "A")
}

#k:: {
    WinGetPos(&x, &y, , , "A")
    WinMove(x, y - i, , , "A")
}

#j:: {
    WinGetPos(&x, &y, , , "A")
    WinMove(x, y + i, , , "A")
}

; # =============================================================================== #
; # Resize Window:                                                                  #
; # =============================================================================== #
#^l:: {
    WinGetPos(&x, &y, &w, &h, "A")
    WinMove( , , w + i, h, "A")
}

#^h:: {
    WinGetPos(&x, &y, &w, &h, "A")
    WinMove( , , w - i, h, "A")
}

#^j:: {
    WinGetPos(&x, &y, &w, &h, "A")
    WinMove( , , w, h + i, "A")
}

#^k:: {
    WinGetPos(&x, &y, &w, &h, "A")
    WinMove( , , w, h - i, "A")
}
