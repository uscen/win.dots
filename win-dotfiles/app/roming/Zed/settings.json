{
  // ===============================================================================
  // General Settings
  // ===============================================================================
  "auto_update": false,
  "autosave": "on_window_change",
  "restore_on_startup": "none",
  "pane_split_direction_vertical": "right",
  "pane_split_direction_horizontal": "down",
  "scroll_sensitivity": 1,
  "vertical_scroll_margin": 10,
  "horizontal_scroll_margin": 10,
  // ===============================================================================
  // Editor & View Settings
  // ===============================================================================
  "show_whitespaces": "none",
  "current_line_highlight": "all",
  "extend_comment_on_newline": false,
  "ensure_final_newline_on_save": false,
  "preferred_line_length": 80,
  "hard_tabs": true,
  "tab_size": 2,
  "gutter": { "line_numbers": true, "runnables": false, "folds": false },
  "indent_guides": { "enabled": false },
  "minimap": { "show": "never" },
  "scrollbar": { "show": "never" },
  // ===============================================================================
  // Font & Typography
  // ===============================================================================
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "ui_font_family": "JetBrainsMono Nerd Font",
  "buffer_line_height": "comfortable",
  "buffer_font_size": 13,
  "buffer_font_weight": 600,
  "ui_font_size": 15,
  "ui_font_weight": 700,
  // ===============================================================================
  // Tab Management
  // ===============================================================================
  "max_tabs": 8,
  "tabs": { "git_status": false },
  "tab_bar": { "show": false },
  "preview_tabs": { "enabled": false },
  // ===============================================================================
  // Code Intelligence
  // ===============================================================================
  "lsp_highlight_debounce": 100,
  "show_completions_on_input": true,
  "show_completion_documentation": false,
  "show_signature_help_after_edits": false,
  "auto_signature_help": false,
  "inlay_hints": { "enabled": false },
  "completions": {
    "words": "fallback",
    "lsp": true,
    "lsp_fetch_timeout_ms": 0,
    "lsp_insert_mode": "replace_suffix"
  },
  // ===============================================================================
  // Vim Configuration
  // ===============================================================================
  "vim_mode": true,
  "vim": {
    "default_mode": "normal",
    "use_system_clipboard": "always",
    "highlight_on_yank_duration": 100,
    "toggle_relative_line_numbers": false,
    "use_smartcase_find": false,
    "cursor_shape": {
      "normal": "block",
      "insert": "bar",
      "replace": "hollow",
      "visual": "block"
    }
  },
  "command_aliases": {
    "W": "w",
    "Wq": "wq",
    "WQ": "wq",
    "Q": "q",
    "Qa": "qa",
    "QA": "qa",
    "Wqa": "wqa",
    "WQa": "wqa",
    "WQA": "wqa"
  },
  // ===============================================================================
  // Search:
  // ===============================================================================
  "search": {
    "button": false,
    "whole_word": false,
    "case_sensitive": false,
    "include_ignored": false,
    "regex": true
  },
  // ===============================================================================
  // UI & Appearance
  // ===============================================================================
  "theme": {
    "mode": "system",
    "light": "Macro Light",
    "dark": "Macro Dark"
  },
  "icon_theme": {
    "mode": "system",
    "light": "Zed (Default)",
    "dark": "Zed (Default)"
  },
  "toolbar": {
    "selections_menu": false,
    "breadcrumbs": false,
    "quick_actions": false
  },
  "title_bar": {
    "show_sign_in": false,
    "show_menus": false,
    "show_user_picture": false,
    "show_branch_name": false,
    "show_branch_icon": false,
    "show_project_items": false,
    "show_onboarding_banner": false
  },
  "project_panel": {
    "button": true,
    "file_icons": true,
    "git_status": true,
    "hide_gitignore": true,
    "auto_fold_dirs": false,
    "folder_icons": false,
    "auto_reveal_entries": false,
    "entry_spacing": "comfortable",
    "dock": "left",
    "default_width": 200,
    "scrollbar": { "show": "never" },
    "indent_guides": { "show": "never" },
    "indent_size": 12
  },
  "centered_layout": { "left_padding": 0.1, "right_padding": 0.1 },
  "active_pane_modifiers": { "border_size": 1, "inactive_opacity": 0.81247 },
  "file_finder": { "file_icons": true, "modal_max_width": "large" },
  "outline_panel": { "dock": "right" },
  "collaboration_panel": { "button": false, "dock": "right" },
  "notification_panel": { "button": false },
  "telemetry": { "diagnostics": false, "metrics": false },
  // ===============================================================================
  // File Handling
  // ===============================================================================
  "file_types": {
    "*.mdx": ["markdown"],
    "Dockerfile": ["Dockerfile", "Dockerfile.*"],
    "JSON": ["json", "jsonc", "*.code-snippets"],
    "JSONC": ["tsconfig*.json"]
  },
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    "**/out",
    "**/dist",
    "**/.husky",
    "**/.turbo",
    "**/.vscode-test",
    "**/.vscode",
    "**/.next",
    "**/.storybook",
    "**/.tap",
    "**/.nyc_output",
    "**/report",
    "**/node_modules"
  ],
  "edit_predictions": {
    "disabled_globs": ["**/dnb.ghe.com/**", "**/gitlab.tech.dnb.no/**"],
    "mode": "eager"
  },
  // ===============================================================================
  // Terminal Settings
  // ===============================================================================
  "terminal": {
    "shell": { "program": "elvish" },
    "alternate_scroll": "on",
    "default_height": 300,
    "working_directory": "first_project_directory",
    "blinking": "terminal_controlled",
    "copy_on_select": true,
    "env": { "EDITOR": "zed --wait" },
    "font_family": "JetBrainsMonoNL Nerd Font",
    "font_features": null,
    "font_size": null,
    "option_as_meta": false,
    "toolbar": { "breadcrumbs": false },
    "max_scroll_history_lines": 100000
  },
  // ===============================================================================
  // Version Control (Git)
  // ===============================================================================
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": { "enabled": false }
  },
  // ===============================================================================
  // Formatting & Linting
  // ===============================================================================
  "formatter": [{ "code_action": "source.organizeImports" }, "prettier"],
  "format_on_save": "on",
  "prettier": {
    "allowed": true,
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "jsxSingleQuote": false,
    "trailingComma": "none",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "always",
    "requirePragma": false,
    "insertPragma": false,
    "proseWrap": "preserve",
    "htmlWhitespaceSensitivity": "css",
    "endOfLine": "lf",
    "overrides": [
      {
        "files": ["*.json"],
        "options": { "singleQuote": false }
      }
    ]
  },
  // ===============================================================================
  // Language Support
  // ===============================================================================
  "languages": {},
  // ===============================================================================
  // Extensions
  // ===============================================================================
  "auto_install_extensions": {
    "html": true,
    "scss": true,
    "emmet": true,
    "prisma": true,
    "ejs": true,
    "lua": true
  },
  // ===============================================================================
  // Assistant
  // ===============================================================================
  "agent": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-7-sonnet-latest"
    },
    "default_height": 640.0,
    "default_width": 640
  }
}
