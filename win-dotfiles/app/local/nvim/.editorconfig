# --          ╭─────────────────────────────────────────────────────────╮
# --          │                     EditorConfig                        │
# --          ╰─────────────────────────────────────────────────────────╯
root = true
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_size = 2
indent_style = space

[*.{js,py}]
charset = utf-8

[lib/**.js]
indent_style = space
indent_size = 2

[*.py]
indent_style = space
indent_size = 4

[*.lua]
indent_type = space
indent_size = 2
tab_width = 2
max_line_length = 120
align_array_table = false
trailing_table_separator = smart
break_all_list_when_line_exceed = true
auto_collapse_lines = true
call_arg_parentheses = keep
quote_style = single

[Makefile]
indent_style = tab

[{package.json,.travis.yml}]
indent_style = space
indent_size = 2
